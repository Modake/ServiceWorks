                  <%= image_tag("http://placehold.it/200x100")%>
                  <span class="card-title">View Services</span>
                </div>
                <div class="card-content">
                  <p>View all of our services.</p>
                </div>
                <div class="card-action">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>




